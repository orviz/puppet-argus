#
# Argus PDP configuration
# 
# Documentation: https://twiki.cern.ch/twiki/bin/view/EGEE/AuthZPDPConfig
# 
[SERVICE]
entityId = http://<%=service_name%>/pdp
hostname = <%=service_name%>
port     = <%=pdp_port%>
adminPort = <%=pdp_admin_port%>
adminPassword = <%=pdp_pass%>

[POLICY]
paps = https://localhost:8150/pap/services/ProvisioningService
retentionInterval = 240

[SECURITY]
servicePrivateKey = /etc/grid-security/hostkey.pem
serviceCertificate = /etc/grid-security/hostcert.pem
trustInfoDir = /etc/grid-security/certificates/
enableSSL = true


